<Page x:Class="МатМоделилование_ПР14.Pages.PagerejectionSmall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:МатМоделилование_ПР14.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagerejectionSmall">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="λ" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="μ" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="t" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <TextBox x:Name="TextBoxLambda"  Grid.Row="1" Grid.Column="1" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>
        <TextBox x:Name="TextBoxNu"  Grid.Row="2" Grid.Column="1" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>
        <TextBox x:Name="TextBoxT"  Grid.Row="3" Grid.Column="1" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>

        <TextBlock Grid.Row="1" Grid.Column="2" Text="A" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="Q" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="Pотк" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <TextBox x:Name="TextBoxA"  Grid.Row="1" Grid.Column="2" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>
        <TextBox x:Name="TextBoxQ"  Grid.Row="2" Grid.Column="2" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>
        <TextBox x:Name="TextBoxP"  Grid.Row="3" Grid.Column="2" Height="30" Width="100" Margin="0 0 50 0" HorizontalAlignment="Right"/>

        <Button x:Name="ButtonRes" Grid.ColumnSpan="4" Grid.Row="4" Height="40" Width="150" Content="Расчитать" Click="ButtonRes_Click"/>

    </Grid>
</Page>
